<Window x:Class="HorizontalList.SearchWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HorizontalList"
        mc:Ignorable="d"
        Title="SearchWin" Height="190" Width="570" Loaded="Window_Loaded">
    <Grid>
        <Label  HorizontalAlignment="Left" Margin="13,14,0,0" Content="Название продукта" Width="121" Height="25" VerticalAlignment="Top"/>
        <Label  HorizontalAlignment="Left" Margin="380,14,0,0" Content="Адресс хранения" Width="105" Height="25" VerticalAlignment="Top"/>
        <TextBox x:Name="NameProduct" HorizontalAlignment="Left" Width="121" Height="29" VerticalAlignment="Top" Margin="13,39,0,0"/>
        <ComboBox x:Name="comboSklad" Margin="380,39,0,0" Height="29" VerticalAlignment="Top" HorizontalAlignment="Left" Width="116"/>
        <Button x:Name="BtSeach" Content="Поиск" HorizontalAlignment="Left" Margin="120,114,0,0" VerticalAlignment="Top" Click="BtSeach_Click"/>
        <Label  HorizontalAlignment="Left" Margin="260,14,0,0" Content="Производитель" Width="105" Height="25" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboManufacturer" Margin="260,39,0,0" Height="29" VerticalAlignment="Top" HorizontalAlignment="Left" Width="116"/>
    </Grid>
</Window>
